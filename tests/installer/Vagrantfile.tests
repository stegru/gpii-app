# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.require_version ">= 1.8.0"

# By default this VM will use 2 processor cores and 2GB of RAM. The 'VM_CPUS' and
# "VM_RAM" environment variables can be used to change that behaviour.
cpus = ENV["VM_CPUS"] || 2
ram = ENV["VM_RAM"] || 2048

Vagrant.configure("2") do |config|
    config.vm.box_check_update = false

    config.vm.define "windows10-preview" do |win10preview|
        win10preview.vm.box = "windows10-preview"
    end
    config.vm.define "windows10" do |win10|
        win10.vm.box = "windows10"
    end
    config.vm.define "windows8" do |win8|
        win8.vm.box = "windows8"
    end
    config.vm.define "windows7" do |win7|
        win7.vm.box = "windows7"
    end


    config.vm.communicator = "winrm"
    config.winrm.username = "vagrant"
    config.winrm.password = "vagrant"
    config.vm.guest = :windows
    config.windows.halt_timeout = 15

    #config.vm.network :forwarded_port, guest: 3389, host: 3389, id: "rdp", auto_correct: true
    #config.vm.network :forwarded_port, guest: 5985, host: 5985, id: "rdp", auto_correct:true
    #config.vm.network :forwarded_port, guest: 22, host: 2222, id: "ssh", auto_correct: true

    config.vm.provider :virtualbox do |v, override|
        v.gui = true
        v.customize ["modifyvm", :id, "--memory", ram]
        v.customize ["modifyvm", :id, "--cpus", cpus]
        v.customize ["modifyvm", :id, "--vram", "256"]
        v.customize ["modifyvm", :id, "--accelerate3d", "off"]
        v.customize ["modifyvm", :id, "--audio", "null", "--audiocontroller", "hda"]
        v.customize ["modifyvm", :id, "--ioapic", "on"]
        v.customize ["setextradata", "global", "GUI/SuppressMessages", "all" ]
    end

    config.vm.synced_folder "/home/ste/src/gpii/gpii-app", "/vagrant"

    if ENV["VAGRANT_VAGRANTFILE"]
        config.vm.post_up_message = "To control this box with vagrant, set VAGRANT_VAGRANTFILE=" + File.basename(ENV["VAGRANT_VAGRANTFILE"])
    end


end
