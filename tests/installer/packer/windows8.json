{
  "builders": [
    {
      "type": "virtualbox-iso",
      "communicator": "winrm",
      "vm_name": "{{user `vm_product`}}",
      "iso_urls": [
        "{{ user `iso_url` }}"
      ],
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "output_directory": "{{user `builder_dir`}}",
      "keep_registered": "{{user `vm_only`}}",
      "skip_export": "{{user `vm_only`}}",
      "headless": true,
      "boot_wait": "2m",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "6h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "guest_os_type": "Windows81_64",
      "shutdown_timeout": "1h",
      "guest_additions_mode": "attach",
      "disk_size": 61440,
      "hard_drive_interface": "sata",
      "hard_drive_nonrotational": true,
      "hard_drive_discard": true,
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/microsoft-updates.bat",
        "./scripts/hotfix-KB3102812.bat",
        "./scripts/win-updates.ps1",
        "./scripts/enable-winrm.ps1",
        "./scripts/disable-winrm.ps1",
        "./scripts/oracle-cert.cer"
      ],
      "export_opts":
      [
        "--manifest",
        "--vsys", "0",
        "--product", "{{user `vm_product`}}",
        "--description", "{{user `vm_description`}}",
        "--version", "v{{isotime \"20060102\"}}"
      ],
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "4096"
        ],
        [
          "storagectl",
          "{{.Name}}",
          "--name",
          "SATA Controller",
          "--hostiocache",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "doit",
      "destination": "C:/"
    },
    {
      "type": "windows-shell",
      "scripts": [
        "./scripts/vm-guest-tools.bat",
        "./scripts/vagrant-ssh.bat",
        "./scripts/doit.bat",
        "./scripts/enableUAC.bat",
        "./scripts/install-refreshenv.bat",
        "./scripts/install-elevate.bat"
      ]
    },
    {
      "type": "windows-shell",
      "inline": ["ver > c:\\Windows\\temp\\winver.txt"]
    },
    {
      "type": "file",
      "direction": "download",
      "source": "C:/Windows/temp/winver.txt",
      "destination": "{{user `box_file`}}-winver.txt"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "{{user `box_file`}}",
      "compression_level": 0,

      "vagrantfile_template": "vagrantfile-windows_81_x64.template"
    }
  ],
  "variables": {
    "iso_url": "http://download.microsoft.com/download/B/9/9/B999286E-0A47-406D-8B3D-5B5AD7373A4A/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_ENTERPRISE_EVAL_EN-US-IRM_CENA_X64FREE_EN-US_DV5.ISO",
    "iso_checksum_type": "md5",
    "iso_checksum": "5e4ecb86fd8619641f1d58f96e8561ec",

    "autounattend": "./answer_files/81_64_quick/Autounattend.xml",

    "vm_product": "windows81-eval-x64",
    "vm_description": "Windows 8.1 Evaluation version for testing",

    "vm_only": "false",
    "builder_dir": "builder/{{user `vm_product`}}",
    "box_file": "boxes/{{user `vm_product`}}-{{.Provider}}-v{{isotime \"20060102\"}}.box"
  }
}
